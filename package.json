{
  "name": "archiver-ts",
  "version": "0.3.4",
  "description": "A TypeScript rewrite of Archiver CLI",
  "description_zh": "用TypeScript重写的Archiver CLI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "arv": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lines": "node .scripts/lines.js",
    "lint": "oxlint .",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "e2e": "node .scripts/e2e.js",
    "build": "vite build",
    "arv": "node .scripts/build.js --arv",
    "pub": "vite build && npm publish --access public"
  },
  "keywords": [
    "archiver",
    "cli",
    "filesystem"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "jsonc-parser": "^3.3.1",
    "oxlint": "^1.46.0",
    "strip-ansi": "^7.1.2",
    "wrap-ansi": "^9.0.2"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}