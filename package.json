{
  "name": "archiver-ts",
  "version": "0.0.1",
  "description": "A TypeScript rewrite of Archiver CLI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "arv": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "e2e": "node .scripts/e2e.js",
    "build": "node .scripts/build.js",
    "pub": "node .scripts/publish.js"
  },
  "keywords": [
    "archiver",
    "cli",
    "filesystem"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^6.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "jsonc-parser": "^3.3.1",
    "strip-ansi": "^7.1.2",
    "wrap-ansi": "^9.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.2.2",
    "rollup": "^4.46.2",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}